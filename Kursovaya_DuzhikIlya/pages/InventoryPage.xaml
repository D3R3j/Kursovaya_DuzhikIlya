<Page x:Class="Kursovaya_DuzhikIlya.pages.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovaya_DuzhikIlya.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Инвентаризация">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Инвентаризация склада" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <ComboBox x:Name="WarehouseSelector" ItemsSource="{Binding Warehouses}" SelectedItem="{Binding SelectedWarehouse}" Margin="0,0,0,10"/>

            <DataGrid x:Name="InventoryGrid" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding InventoryItems}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Учетное количество" Binding="{Binding SystemQuantity}" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Фактическое количество">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding ActualQuantity, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Сохранить изменения" Background="#2196F3" Foreground="White" Width="200" Margin="0,20,0,0" Click="SaveInventory_Click"/>
        </StackPanel>
    </Grid>
</Page>
