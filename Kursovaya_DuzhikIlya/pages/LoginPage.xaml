<Page x:Class="Kursovaya_DuzhikIlya.pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovaya_DuzhikIlya.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="White" Padding="20" CornerRadius="10" BorderBrush="#2196F3" BorderThickness="1">
            <StackPanel Width="300">
                <TextBlock Text="Вход в систему" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Логин"/>
                <TextBox x:Name="LoginTextBox" Margin="0,0,0,10"/>
                <TextBlock Text="Пароль"/>
                <PasswordBox x:Name="PasswordTextBox" Margin="0,0,0,20"/>

                <Button Content="Войти" Background="#2196F3" Foreground="White" Click="Login_Click" Margin="0,0,0,10"/>
                <Button Content="Регистрация" Click="Register_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
