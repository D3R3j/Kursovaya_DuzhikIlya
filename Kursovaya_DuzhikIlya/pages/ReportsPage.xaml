<Page x:Class="Kursovaya_DuzhikIlya.pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovaya_DuzhikIlya.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Отчеты">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Генерация отчетов" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <GroupBox Header="Параметры отчета" Margin="0,0,0,20">
                <StackPanel>
                    <DatePicker x:Name="StartDatePicker" SelectedDate="{Binding StartDate}" Margin="0,0,0,10"/>
                    <DatePicker x:Name="EndDatePicker" SelectedDate="{Binding EndDate}" Margin="0,0,0,10"/>
                    <ComboBox x:Name="ReportTypeSelector" ItemsSource="{Binding ReportTypes}" SelectedItem="{Binding SelectedReportType}"/>
                </StackPanel>
            </GroupBox>

            <Button Content="Сформировать отчет" Background="#2196F3" Foreground="White" Width="200" Click="GenerateReport_Click" Margin="0,0,0,20"/>

            <DataGrid x:Name="ReportGrid" ItemsSource="{Binding ReportData}" AutoGenerateColumns="True" IsReadOnly="True" Height="22"/>
            <Button Content="Экспорт в PDF" Background="#4CAF50" Foreground="White" Width="200" Click="ExportToPDF_Click"/>
        </StackPanel>
    </Grid>
</Page>
