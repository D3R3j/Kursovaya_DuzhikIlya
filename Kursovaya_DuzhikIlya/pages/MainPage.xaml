<Page x:Class="Kursovaya_DuzhikIlya.pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursovaya_DuzhikIlya.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Основные функции" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

            <Button Content="Управление товарами" Width="200" Height="50" Margin="0,10" Click="ManageProducts_Click"/>
            <Button Content="Инвентаризация" Width="200" Height="50" Margin="0,10" Click="Inventory_Click"/>
            <Button Content="Генерация отчетов" Width="200" Height="50" Margin="0,10" Click="Reports_Click"/>
        </StackPanel>
    </Grid>
</Page>
